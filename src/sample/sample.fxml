                  </Menu>
                  <Menu fx:id="customerMenu" mnemonicParsing="false" text="Customer">
                    <items>
                      <MenuItem mnemonicParsing="false" text="Action 1" />
                    </items>
                  </Menu>
                  <Menu fx:id="staffMenu" mnemonicParsing="false" text="Staff" />
