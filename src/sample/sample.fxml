                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="endDate">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </DatePicker>
                  <Button fx:id="setDateBT" mnemonicParsing="false" onAction="#setDate" text="Set Date" />
               </children>
            </HBox>
            <HBox prefHeight="24.0" prefWidth="741.0">
